/* pages/address/list.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 120rpx;
}

/* 地址列表 */
.address-list {
  padding: 20rpx;
}

.address-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.address-content {
  flex: 1;
}

/* 收货人信息 */
.receiver-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.receiver-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 20rpx;
}

.receiver-phone {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.default-tag {
  background-color: #13CE66;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  line-height: 1;
}

/* 详细地址 */
.address-detail {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 操作按钮 */
.address-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-left: 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  min-width: 120rpx;
  border: 1rpx solid #e0e0e0;
  background-color: #fff;
}

.action-btn text {
  margin-left: 8rpx;
}

.edit-btn {
  color: #13CE66;
  border-color: #13CE66;
}

.delete-btn {
  color: #ff4757;
  border-color: #ff4757;
}

.default-btn {
  color: #ffa502;
  border-color: #ffa502;
}

.default-btn.active {
  background-color: #ffa502;
  color: #fff;
}

/* 选择图标 */
.select-icon {
  margin-left: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
}

/* 添加地址按钮 */
.add-address-btn {
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  background-color: #13CE66;
  color: #fff;
  border-radius: 50rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(19, 206, 102, 0.3);
}

.add-address-btn text {
  margin-left: 12rpx;
}

/* 选择模式样式 */
.container[data-select="true"] .address-item {
  cursor: pointer;
}

.container[data-select="true"] .address-item:active {
  background-color: #f0f0f0;
}