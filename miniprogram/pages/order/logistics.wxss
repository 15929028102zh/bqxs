/* pages/order/logistics.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200px;
}

.loading-text {
  color: #999;
  font-size: 14px;
}

.logistics-container {
  padding: 20px;
}

/* 物流公司信息 */
.logistics-header {
  background: white;
  border-radius: 8px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.company-info {
  margin-bottom: 15px;
}

.company-name {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8px;
}

.tracking-no {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  background: #f8f9fa;
  border-radius: 4px;
  font-size: 14px;
  color: #666;
}

.copy-hint {
  color: #13CE66;
  font-size: 12px;
}

.status {
  text-align: center;
}

.status-text {
  display: inline-block;
  padding: 6px 12px;
  background: #13CE66;
  color: white;
  border-radius: 12px;
  font-size: 12px;
}

/* 物流轨迹 */
.tracking-timeline {
  background: white;
  border-radius: 8px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.timeline-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 20px;
  padding-bottom: 10px;
  border-bottom: 1px solid #eee;
}

.timeline-list {
  position: relative;
}

.timeline-item {
  position: relative;
  padding-left: 30px;
  padding-bottom: 20px;
}

.timeline-item:not(:last-child)::before {
  content: '';
  position: absolute;
  left: 7px;
  top: 20px;
  bottom: -20px;
  width: 2px;
  background: #eee;
}

.timeline-item.current::before {
  background: #13CE66;
}

.timeline-dot {
  position: absolute;
  left: 0;
  top: 5px;
  width: 14px;
  height: 14px;
  border-radius: 50%;
  background: #eee;
  border: 2px solid white;
  box-shadow: 0 0 0 2px #eee;
}

.timeline-item.current .timeline-dot {
  background: #13CE66;
  box-shadow: 0 0 0 2px #13CE66;
}

.timeline-content {
  padding-left: 10px;
}

.timeline-desc {
  font-size: 14px;
  color: #333;
  line-height: 1.5;
  margin-bottom: 5px;
}

.timeline-time {
  font-size: 12px;
  color: #999;
  margin-bottom: 3px;
}

.timeline-location {
  font-size: 12px;
  color: #666;
}

/* 暂无物流信息 */
.no-logistics {
  text-align: center;
  padding: 60px 20px;
  background: white;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.no-logistics-icon {
  font-size: 48px;
  margin-bottom: 20px;
}

.no-logistics-text {
  font-size: 16px;
  color: #333;
  margin-bottom: 10px;
}

.no-logistics-desc {
  font-size: 14px;
  color: #999;
  line-height: 1.5;
}

/* 底部操作 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20px;
  background: white;
  border-top: 1px solid #eee;
}

.action-btn {
  width: 100%;
  height: 44px;
  background: #13CE66;
  color: white;
  border: none;
  border-radius: 22px;
  font-size: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn:active {
  background: #0fa954;
}