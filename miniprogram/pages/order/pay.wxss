/* pages/order/pay.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  font-size: 28rpx;
  color: #999;
}

/* 支付内容 */
.pay-content {
  padding: 40rpx 30rpx;
}

/* 金额区域 */
.amount-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.amount-icon {
  margin-bottom: 30rpx;
}

.amount-label {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.amount-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ff4757;
  margin-bottom: 20rpx;
}

.order-no {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 订单信息区域 */
.order-section,
.detail-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item,
.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.info-item:last-child,
.detail-item:last-child {
  border-bottom: none;
}

.info-label,
.detail-label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.info-value,
.detail-value {
  font-size: 28rpx;
  color: #333;
  text-align: right;
  flex: 1;
  word-break: break-all;
}

/* 总计样式 */
.detail-item.total {
  padding-top: 30rpx;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: none;
  margin-top: 20rpx;
}

.detail-item.total .detail-label {
  font-weight: bold;
  color: #333;
}

.total-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4757;
}

/* 底部按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 30rpx;
  border-top: 1rpx solid #f5f5f5;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.cancel-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #f8f8f8;
  color: #666;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.cancel-btn:active {
  background-color: #e8e8e8;
}

.pay-btn {
  flex: 2;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #13CE66;
  color: #fff;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.pay-btn:active {
  background-color: #0fa54a;
}

.pay-btn:disabled {
  background-color: #ccc;
  color: #999;
}

.pay-btn.button-loading {
  background-color: #ccc;
}