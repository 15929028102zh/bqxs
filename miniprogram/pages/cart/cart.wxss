/* pages/cart/cart.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 120rpx;
}

/* 空状态 */
.not-login, .empty-cart {
  text-align: center;
  padding: 200rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-bottom: 60rpx;
}

.login-btn, .home-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.login-btn {
  background-color: #13CE66;
  color: #fff;
}

.home-btn {
  background-color: #fff;
  color: #13CE66;
  border: 2rpx solid #13CE66;
}

/* 购物车内容 */
.cart-content {
  padding: 20rpx;
}

/* 全选栏 */
.select-all-bar {
  background-color: #fff;
  padding: 30rpx 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.select-all {
  display: flex;
  align-items: center;
}

.select-icon {
  margin-right: 20rpx;
}

.select-text {
  font-size: 28rpx;
  color: #333;
}

/* 商品列表 */
.cart-list {
  background-color: #fff;
  border-radius: 12rpx;
}

.cart-item {
  display: flex;
  align-items: flex-start;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.cart-item:last-child {
  border-bottom: none;
}

.item-select {
  margin-right: 20rpx;
  margin-top: 10rpx;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-spec {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 12rpx;
}

.item-price-row {
  margin-bottom: 20rpx;
}

.item-price {
  font-size: 32rpx;
  color: #ff4757;
  font-weight: bold;
}

.item-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 数量控制 */
.quantity-control {
  display: flex;
  align-items: center;
  border: 1rpx solid #eee;
  border-radius: 6rpx;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8;
}

.quantity-btn:first-child {
  border-radius: 6rpx 0 0 6rpx;
}

.quantity-btn:last-child {
  border-radius: 0 6rpx 6rpx 0;
}

.quantity-text {
  width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  background-color: #fff;
  border-left: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
}

.delete-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 底部结算栏 */
.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  z-index: 100;
}

.total-info {
  display: flex;
  align-items: center;
}

.total-label {
  font-size: 28rpx;
  color: #333;
}

.total-amount {
  font-size: 36rpx;
  color: #ff4757;
  font-weight: bold;
}

.checkout-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #13CE66;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  text-align: center;
}

.checkout-btn[disabled] {
  background-color: #ccc;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}