/* pages/privacy-test/privacy-test.wxss */
.container {
  padding: 20px;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30px;
}

.title {
  display: block;
  font-size: 24px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8px;
}

.subtitle {
  display: block;
  font-size: 14px;
  color: #666;
}

.test-section {
  background-color: #fff;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.section-title {
  display: block;
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 15px;
  border-left: 4px solid #1989fa;
  padding-left: 10px;
}

.test-btn {
  width: 100%;
  height: 44px;
  background-color: #1989fa;
  color: #fff;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  margin-bottom: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.test-btn.backend-test {
  background: #ff6b35;
}

.test-btn.backend-test:active {
  background: #e55a2b;
}

.test-btn:last-child {
  margin-bottom: 0;
}

.test-btn::after {
  border: none;
}

.test-btn:active {
  background-color: #1976d2;
}

.results-section {
  background-color: #fff;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.results-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.clear-btn {
  background-color: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 6px;
  padding: 6px 12px;
  font-size: 14px;
}

.clear-btn::after {
  border: none;
}

.results-list {
  max-height: 400px;
  overflow-y: auto;
}

.result-item {
  border: 1px solid #eee;
  border-radius: 8px;
  padding: 12px;
  margin-bottom: 10px;
  background-color: #fafafa;
}

.result-item:last-child {
  margin-bottom: 0;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.result-time {
  font-size: 12px;
  color: #999;
}

.result-type {
  font-size: 12px;
  padding: 2px 8px;
  border-radius: 4px;
  color: #fff;
}

.result-type-info {
  background-color: #1989fa;
}

.result-type-success {
  background-color: #13ce66;
}

.result-type-warning {
  background-color: #ff9500;
}

.result-type-error {
  background-color: #ff4757;
}

.result-action {
  display: block;
  font-size: 14px;
  font-weight: bold;
  color: #333;
  margin-bottom: 4px;
}

.result-content {
  display: block;
  font-size: 13px;
  color: #666;
  line-height: 1.4;
  word-break: break-all;
}

.empty-results {
  text-align: center;
  padding: 40px 0;
  color: #999;
}

.info-section {
  background-color: #fff;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.info-content {
  padding-left: 10px;
}

.info-item {
  display: block;
  font-size: 14px;
  color: #666;
  line-height: 1.6;
  margin-bottom: 8px;
}

.info-item:last-child {
  margin-bottom: 0;
}