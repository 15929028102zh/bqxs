/* pages/search/search.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 搜索栏 */
.search-bar {
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-input-wrapper {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  margin-right: 20rpx;
  position: relative;
}

.search-icon {
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  height: 64rpx;
  line-height: 64rpx;
}

.clear-btn {
  padding: 8rpx;
  margin-left: 8rpx;
}

.search-btn {
  color: #13CE66;
  font-size: 28rpx;
  padding: 0 16rpx;
}

/* 搜索建议 */
.search-suggestions {
  background-color: #fff;
  padding: 0 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.clear-history {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.clear-history icon {
  margin-right: 8rpx;
}

.keyword-list {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.keyword-item {
  background-color: #f5f5f5;
  border-radius: 32rpx;
  padding: 16rpx 24rpx;
  margin: 0 16rpx 16rpx 0;
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
  position: relative;
}

.keyword-item.hot-item {
  background-color: #f0f9ff;
  color: #13CE66;
}

.keyword-item.history-item {
  padding-right: 48rpx;
}

.keyword-text {
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.delete-btn {
  position: absolute;
  right: 8rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 8rpx;
}

/* 搜索结果 */
.search-results {
  padding: 20rpx;
}

.result-header {
  padding: 20rpx 0;
  font-size: 26rpx;
  color: #666;
}

/* 商品列表 */
.product-list {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.product-item {
  display: flex;
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.product-item:last-child {
  border-bottom: none;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-tags {
  margin-bottom: 12rpx;
}

.tag {
  display: inline-block;
  background-color: #f0f9ff;
  color: #13CE66;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-right: 8rpx;
}

.product-bottom {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.price-info {
  display: flex;
  align-items: baseline;
}

.current-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4757;
  margin-right: 12rpx;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.product-actions {
  display: flex;
  align-items: center;
}

.sales-info {
  font-size: 22rpx;
  color: #999;
  margin-right: 16rpx;
}

.add-cart-btn {
  width: 56rpx;
  height: 56rpx;
  background-color: #13CE66;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: #999;
}

.global-loading {
  text-align: center;
  padding: 120rpx 40rpx;
  font-size: 28rpx;
  color: #999;
}

/* 历史记录区域 */
.history-section {
  border-bottom: 1rpx solid #f5f5f5;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

/* 热门搜索区域 */
.hot-section {
  padding-bottom: 40rpx;
}